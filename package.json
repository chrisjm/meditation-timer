		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.2.4",
		"vitest": "^4.0.14"
	},
	"dependencies": {
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"hls.js": "^1.6.15",
		"lucide-svelte": "^0.555.0",
		"marked": "^17.0.1",
		"svelte-confetti": "^2.3.2"
	},
	"pnpm": {
